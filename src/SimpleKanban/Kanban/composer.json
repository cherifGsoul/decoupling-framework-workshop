{
    "name": "simplekanban/kanban",
    "type": "library",
    "authors": [
        {
            "name": "Cherif BOUCHELAGHEM",
            "email": "cherif.bouchelaghem@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=5.4",
        "ramsey/uuid": "^3.4",
        "doctrine/collections": "^1.3",
        "simplekanban/common": "*"
    },
    "autoload": {
        "psr-4": {
            "SimpleKanban\\Kanban\\": "."
        }
    },
    "autoload-dev": {
        "psr-4": { "SimpleKanban\\Kanban\\spec\\": "spec/" }
    },
    "require-dev": {
        "phpspec/phpspec": "^3.3"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../*/*"
        }
    ],
    "config": {
        "bin-dir": "./bin"
    }
}
